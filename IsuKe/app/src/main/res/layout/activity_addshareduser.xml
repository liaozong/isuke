<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/org_word"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpDimen01" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpDimen48"
            android:layout_marginTop="@dimen/dpDimen20">

            <RelativeLayout
                android:id="@+id/title_back"
                android:layout_width="@dimen/dpDimen80"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/commom_back_image"
                    android:background="@mipmap/ic_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/baise"
                android:textSize="@dimen/spDimen16" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/isuke_background"
            android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mainlist_img"
                android:layout_width="@dimen/dpDimen60"
                android:layout_height="@dimen/dpDimen60"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dpDimen15"
                android:layout_marginTop="@dimen/dpDimen30"
                android:background="@mipmap/ic_socket2" />

            <TextView
                android:id="@+id/mainlist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mainlist_img"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/dpDimen10"
                android:layout_marginTop="@dimen/dpDimen10"
                android:text="插座" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_user"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpDimen48"
            android:layout_marginLeft="@dimen/dpDimen20"
            android:layout_marginRight="@dimen/dpDimen20"
            android:layout_marginTop="@dimen/dpDimen20">


            <EditText
                android:id="@+id/userphone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpDimen48"
                android:background="@null"
                android:hint="@string/login_phonenum"
                android:maxLength="20"
                android:maxLines="1"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColorHint="@color/danhui"
                android:textCursorDrawable="@drawable/color_cursor"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/danhui" />
        </RelativeLayout>

        <Button
            android:id="@+id/add"
            style="@style/orgcolor_btnstyle"
            android:layout_marginTop="@dimen/dpDimen48"
            android:layout_gravity="center_horizontal"
            android:text="@string/ok" />
        </LinearLayout>

    </LinearLayout>

</layout>