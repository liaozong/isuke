<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/org_word"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpDimen01" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpDimen48"
            android:layout_marginTop="@dimen/dpDimen20">

            <RelativeLayout
                android:id="@+id/title_back"
                android:layout_width="@dimen/dpDimen80"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/commom_back_image"
                    android:background="@mipmap/ic_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/baise"
                android:textSize="@dimen/spDimen16" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/isuke_background">

            <EditText
                android:padding="@dimen/dpDimen16"
                android:id="@+id/et_advice"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpDimen200"
                android:background="@android:color/white"
                android:textSize="@dimen/sp_16"
                android:gravity="left"
                android:hint="@string/advice_tip"
                />


            <EditText
                android:layout_marginTop="@dimen/dpDimen12"
                android:padding="@dimen/dpDimen15"
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:textSize="@dimen/sp_16"
                android:gravity="left|center_vertical"
                android:hint="请留下您的电话或邮箱（选填）"
                />

            <Button
                android:id="@+id/btnSubmit"
                style="@style/orgcolor_btnstyle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dpDimen30"
                android:text="@string/commit" />

        </LinearLayout>
    </LinearLayout>
</layout>