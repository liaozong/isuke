<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/org_word"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpDimen01" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dpDimen48"
            android:layout_marginTop="@dimen/dpDimen20">

            <RelativeLayout
                android:id="@+id/title_back"
                android:layout_width="@dimen/dpDimen80"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/commom_back_image"
                    android:background="@mipmap/ic_back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/baise"
                android:textSize="@dimen/spDimen16" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/isuke_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dpDimen1"
                    android:background="@color/baise"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dpDimen120"
                        android:layout_height="@dimen/dpDimen60"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="@dimen/dpDimen30"
                        android:src="@mipmap/ic_isukeloge02" />

                    <TextView
                        android:id="@+id/version_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dpDimen5"
                        android:text="iSuke"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dpDimen10"
                        android:layout_marginRight="@dimen/dpDimen10"
                        android:layout_marginTop="@dimen/dpDimen20"
                        android:text="@string/aboutus_info" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dpDimen30" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dpDimen30" />




                <RelativeLayout style="@style/AboutUsItem">

                    <TextView
                        android:text="隐私政策"
                        style="@style/AboutUsItemTV" />

                    <ImageView style="@style/MineIconArrow" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px">
                </View>
                <RelativeLayout style="@style/AboutUsItem">

                    <TextView
                        android:text="软件评分"
                        style="@style/AboutUsItemTV" />

                    <ImageView style="@style/MineIconArrow" />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px">
                </View>
                <RelativeLayout style="@style/AboutUsItem">

                    <TextView
                        android:text="ISuKe官网"
                        style="@style/AboutUsItemTV" />

                    <ImageView style="@style/MineIconArrow" />

                </RelativeLayout>







            </LinearLayout>


            <TextView
                android:layout_marginBottom="@dimen/dpDimen30"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dpDimen20"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/CopyRight_CN"
                />

            <TextView
                android:layout_marginBottom="@dimen/dpDimen10"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dpDimen5"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/CopyRight_EN"
                />

        </RelativeLayout>


    </LinearLayout>
</layout>